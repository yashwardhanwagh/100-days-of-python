from turtle import Turtle
import random

import turtle

COLORS = ["red","orange","yellow","green","purple","blue","violet","navy"]
STARTING_MOVE_DISTANCE = 5
MOVE_INCREMENT = 10

class carManager(Turtle):
    def __init__(self):
        self.cars = []
        self.cars_speed = STARTING_MOVE_DISTANCE

    def create_cars(self):
        if random.randint(1,6) == 1:
            car = Turtle("square")
            car.shapesize(stretch_wid=1, stretch_len=2)
            car.color(random.choice(COLORS))
            car.penup()
            car.goto(random.randint(100,280), random.randint(-250, 250))
            car.setheading(180)  # face left
            self.cars.append(car)


    def move_car(self):
        for car in self.cars:
            car.forward(self.cars_speed)


    def car_new_level(self):
        self.cars_speed += MOVE_INCREMENT
